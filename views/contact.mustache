<!DOCTYPE HTML>
<html>
    {{> head}}          
    <body>
        {{> header}}
        <div class="font-sans w-full max-w-xs">
          <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="/contact-us" method="post"> 
            <div class="mb-6">
               <strong> SAY SOMETHING </strong>
            </div>
            <div class="mb-4">
              <input class="shadow appearance-none border border-red-lighter w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:border-red-light" type="text" name="name" placeholder="Your name" value ="{{ name }}"/> 
            </div>
            <div class="mb-4">
              <input class="shadow appearance-none border border-red-lighter w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:border-red-light" type="email" name="email" placeholder="Your email"/> 
            </div>
            <div class="mb-4">
              <textarea class="shadow appearance-none border border-red-lighter w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:border-red-light" name="message" placeholder="Message"></textarea>
            </div>
            <div  class="mb-4">
              <button class="shadow bg-red-light hover:bg-red-lighter focus:shadow-outline focus:outline-none focus:border-red-light text-white font-bold w-full py-2 px-3">
                SEND
              </button> 
            </div>
          </form> 
        </div>   
        {{> footer}} 
    </body>
</html>    
