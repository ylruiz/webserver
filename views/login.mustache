<!DOCTYPE HTML>
<html>
    {{> head}}        
    <body>
        {{> header}}
        <div class="font-sans w-full max-w-xs mt-4">
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="/login" method="post">
                <div class="mb-6">
                    <strong> ACCOUNT LOGIN </strong>
                </div>
                <div class="mb-4">
                    <input class="shadow appearance-none border border-red-lighter w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:border-red-light" type="email" name="email" placeholder="Your email" value ="{{ email }}"/>     
                </div>
                <div class="mb-6">
                    <input class="shadow appearance-none border border-red-lighter w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:border-red-light" type="password" name="password" placeholder="Your password" value ="{{ password }}">
                </div>
                <div class="flex items-center">
                    <button class="shadow bg-red-light hover:bg-red-lighter focus:shadow-outline focus:border-red-light text-white font-bold w-full py-2 px-3">
                        SIGN IN
                    </button> 
                </div>
            </form>
        </div>
        {{> footer}}
    </body>
</html>    